import pygame


pygame.init()

width = 800
height = 600

screen = pygame.display.set_mode((width,height))

screen.fill((139,21,194))
running_STATE = True
while running_STATE:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
                print("The button x have been clicked")
                running_STATE = False

    pygame.display.flip()

pygame.quit()

